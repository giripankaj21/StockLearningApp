<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubtopicDetailActivity"
    android:background="@color/bg">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSubTopicTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtopic Title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                android:gravity="center" />

            <ImageView
                android:id="@+id/ivSubTopicImage"
                android:layout_width="375dp"
                android:layout_height="300dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:contentDescription="Subtopic Image" />

            <TextView
                android:id="@+id/tvSubTopicDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtopic detailed description goes here."
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>